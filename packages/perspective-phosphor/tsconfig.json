{
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es2016",
        "outDir": "dist/esm",
        "sourceMap": true,
        "inlineSourceMap": false,
        "lib": [
            "es2016",
            "ES2015.Promise",
            "DOM"
        ],
        "types": [
            "@finos/perspective-viewer"
        ]
    },
    "include": [
        "src/ts/*"
    ]
}